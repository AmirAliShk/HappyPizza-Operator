<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/page_background"
    android:clickable="true"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_top_register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/gray_dark"

                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgMenu"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:src="@drawable/ic_menu" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_dark"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:padding="@dimen/_8sdp"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:src="@drawable/ic_registration_order" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:layout_weight="1"
                                android:background="@drawable/gray_dark"
                                android:gravity="center"
                                android:text="ثبت سفارش"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llCustomers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_33sdp"
                            android:background="@drawable/gray_dark"
                            android:padding="@dimen/_8sdp"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:src="@drawable/ic_orders" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:layout_weight="1"
                                android:background="@drawable/gray_dark"
                                android:gravity="center"
                                android:text="ثبت سفارش"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_dark"
                            android:layout_marginTop="@dimen/_33sdp"
                            android:padding="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:src="@drawable/ic_customers" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="لغو در خواست"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/ic_bottom_register" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/_20sdp"
            android:src="@drawable/ic_crm" />

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
