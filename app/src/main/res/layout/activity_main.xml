<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar"
    android:layoutDirection="rtl"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_14sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_menu__2_" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_60sdp"
                android:src="@drawable/ic_happy_pizza" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pichi"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llRegisterOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_red"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/ic_registration_order" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:text="ثبت سفارش"
                    android:textColor="@color/color_Red"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/_10sdp"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:background="@drawable/stroke_red"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:elevation="@dimen/_2sdp"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/ic_orders"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:text="لیست سفارش"
                    android:textColor="@color/color_Red"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/_10sdp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>